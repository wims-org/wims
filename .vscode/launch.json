    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/frontend/.venv/bin/python",
            "module": "flask",
            "cwd": "${workspaceFolder}/frontend/src/",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "5002",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend/src/",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "5005",
                "--reload"
            ],
            "jinja": true
        }
    ]
}