    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend/src/",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "5005",
                "--reload",
                "--timeout-graceful-shutdown",
                "0"
            ],
            "jinja": true,
            "consoleTitle": "Python: FastAPI",
            "env": {
            //    "LLM_ENVIRONMENT": "development"
             "LLM_ENVIRONMENT": "production"
            }
        },
        {
            "name": "Vue: npm run dev",
            "type": "node",
            "cwd": "${workspaceFolder}/vue_frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
