  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/backend/src/",
      "args": [
        "main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "5005",
        "--reload",
        "--timeout-graceful-shutdown",
        "0"
      ],
      "jinja": true,
      "consoleTitle": "Python: FastAPI",
      "env": {
        //    "LLM_ENVIRONMENT": "development"
        "LLM_ENVIRONMENT": "production",
        "CONFIG_FILE": "${workspaceFolder}/backend/src/config.yml"
      }
    },
    {
      "name": "Vue: npm run dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/vue_frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Run Playwright Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/integration",
      "runtimeExecutable": "npx",
      "args": [ "playwright", "test", "--ui" ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
