{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Config",
    "type": "object",
    "$version": 1.0,
    "properties": {
        "database": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string",
                    "format": "ipv4"
                },
                "port": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "database": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": ["host", "port", "name", "database", "user", "password"]
        }
    },
    "required": ["schema_version", "database"]
}
